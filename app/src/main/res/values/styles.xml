<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="actionModeStyle">@style/ActionMode</item>
        <item name="actionModeCloseDrawable">@drawable/back</item>
        <item name="actionModeSplitBackground">@android:color/holo_red_light</item>

    </style>

    <style name="ActionMode">
        <item name="background">@drawable/header</item>
        <item name="backgroundSplit">@android:color/holo_red_light</item>
        <item name="height">?android:attr/actionBarSize</item>
        <item name="titleTextStyle">@android:color/black</item>


        <!--<item name="android:subtitleTextStyle">@android:style/TextAppearance.Widget.ActionMode.Subtitle</item>-->
    </style>
    <style name="MyActionModeTitleStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionMode.Title">
        <item name="android:textColor">#555555</item>
    </style>
    <style name="MyCheckBox">
        <item name="android:background">#ffffff</item>
        <item name="android:button">?android:attr/listChoiceIndicatorMultiple</item>
    </style>

    <style name="CustomWindowTitleStyle">
        <item name="android:textColor">@android:color/holo_red_light</item>
    </style>

    <style name="CustomTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowTitleBackgroundStyle">@android:color/holo_red_light</item>
        <item name="android:windowTitleStyle">@style/CustomWindowTitleStyle</item>
    </style>

    <style name="CustomActionBar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimary">#ffffff</item>
        <item name="android:textColor">#000000</item>

    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" >

        </style>
</resources>
